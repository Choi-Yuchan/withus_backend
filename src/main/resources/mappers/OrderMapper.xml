<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="withus.ex.mapper.OrderMapper">

	<select id="getGoodsInfo" resultMap="orderMap">
    <![CDATA[
      select product_number, product_name, price
      from withus_product where product_number = #{product_number}
   ]]>
	</select>
	
	<resultMap id="orderMap" type="withus.ex.vo.OrderPageItemVO">
      <id property="productNumber" column="product_number" />
      <result property="quantity" column="quantity" />
      <result property="productName" column="product_name" />
      <result property="price" column="price" />
      <result property="totalPrice" column="total_price" />
   </resultMap>
	

	
</mapper>